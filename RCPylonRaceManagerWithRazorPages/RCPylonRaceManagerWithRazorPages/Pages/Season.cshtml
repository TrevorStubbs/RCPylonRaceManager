@page "/season/{year:int?}"
@using RCPylonRaceManagerWithRazorPages.Components 
@model RCPylonRaceManagerWithRazorPages.Pages.SeasonModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Season Panel";
}

<div class="text-center">
    <h1 class="display-4">[Year] Season</h1>
</div>
@*TODO: Make as Component and Render Dynamically*@
<div>
    <table class="table">
        <thead>
            <tr class="text-center">
                <th colspan="3">Pilot List</th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>Pilot Name</th>
                <th>AMA Number</th>
                <th>Season Score</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Trevor Stubbs</td>
                <td>123456</td>
                <td>100</td>
            </tr>
            <tr>
                <td>Roy Stubbs</td>
                <td>56789</td>
                <td>90</td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-primary">Register Pilot</button>
</div>
<div>
    <button class="btn btn-primary">Start New Race Day</button>
    <button class="btn btn-outline-danger">Go Back</button>
</div>
<hr />
<div>
    <h3>Single Pilot</h3>
    <hr />
    @(await Html.RenderComponentAsync<SeasonTable>(RenderMode.ServerPrerendered, @Model.SeasonComponentObject))
    <h3>Web Assembly</h3>
    @(await Html.RenderComponentAsync<SeasonTable>(RenderMode.WebAssemblyPrerendered, @Model.SeasonComponentObject))
</div>